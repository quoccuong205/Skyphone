
<h3 style="padding-top: 50px; text-align:center;">Your Cart</h3>
<hr>

{{# if products }}
    <div class="row justify-content-md-center" style="padding-top:10px;">
        <div class="col-sm-6 col-md-4 col-md-offset-3 col-sm-offset-3 ">
            <ul class="list-group">
                {{# each products }}
                    <li class="list-group-item">
                        <span class="badge">{{ this.qty }}</span>
                        <strong>{{ this.item.title }}</strong>
                        <span class="label label-success">${{ this.price }}</span>
                        <div class="btn-group">
                             <button class="col btn btn-ultra-voilet btn-rounded btn-primary btn-xs dropdown-toggle " style= "margin-left:80px" type="button" data-toggle="dropdown">Adjust <span class="caret"></span></button>
                            <ul class="dropdown-menu" style="background-color: rgb(77, 43, 66); text-align: center;">
                                <li><a style="color: white" href="/reduce/{{this.item._id}}">Reduce by 1</a></li>
                                <hr>
                                <li><a style="color: white"  href="/remove/{{this.item._id}}">Remove All</a></li>
                            </ul>
                        </div>
                    </li>
                {{/each}}
            </ul>
        </div>
    </div>

    <div class="row justify-content-md-center">
        <div class="col-sm-6 col-md-2 col-md-offset-3 col-sm-offset-3" style="padding-top: 10px; padding-left:60px">
            <strong >Total: {{ totalPrice }} $</strong>
        </div>
    </div>

    <hr>

    <div class="row justify-content-md-center">
        <div class="col-sm-6 col-md-2 col-md-offset-3 col-sm-offset-3" style="padding-left:50px">
            <a href="/checkout" type="button" class="btn btn-success">Checkout</a>
        </div>
    </div>
{{ else }}
    <div class="row d-flex justify-content-center" style="padding-top: 50px ;">
        <div  class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3 d-flex justify-content-center" >
            <h2 >No Items in Cart</h2>
        </div>
    </div>
{{/if}}


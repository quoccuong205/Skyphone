<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <br>
        <h2 class= "Order">My Orders</h2>
        <br><br><br>
        {{#each orders}}
        <div class="cart">
            <div class="cart-body">
                <ul class="list-group">
                    {{#each this.items}}
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        {{this.item.title}} | {{ this.qty }} Units
                        <span class="badge badge-primary badge-pill">{{ this.price }}$</span>
                    </li>
                    {{/each}}
                </ul>
            </div>
            <div class="cart-footer" style="text-align: right;"><strong>Total Price: ${{ this.cart.totalPrice }}</strong></div>
            <br> 
        </div>
        {{/each}}
    </div>
</div>

